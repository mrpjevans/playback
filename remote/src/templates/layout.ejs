<!doctype html>
<html class="h-100" data-bs-theme="dark">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link href="/static/css/bootstrap.min.css" rel="stylesheet" />
		<link href="/static/css/playback.css" rel="stylesheet" />
		<title><%= config.name %></title>
	</head>
	<body class="h-100">
		<div class="header">Playback.OS</div>
		<%- body %>
		<div class="footer">Ready</div>

		<script>
			function vlcCommand(command, arg = "") {
				let fullCommand = `?command=${command}`;
				if (arg !== "") fullCommand += `&${arg}`;
				fetch(`<%= config.vlcURL %>${fullCommand}`, {
					headers: {
						Authorization: `Basic ${btoa(":playback")}`,
					},
					mode: "no-cors",
					credentials: "include",
				});
			}
		</script>

	</body>
</html>
